{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "outDir": "dist",
    "lib": [
      "es2015",
      "es6",
      "es2017",
      "dom"
    ],
    "types": [
      "reflect-metadata",
      "node",
      "jest"
    ],
    "paths": { "@grupakmk/libstorefront-gus-plugin": ["./index.d.ts"] }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "tests"
  ]
}
